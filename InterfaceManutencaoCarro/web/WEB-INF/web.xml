<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ServletCliente</servlet-name>
        <servlet-class>cliente.ServletCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletVeiculo</servlet-name>
        <servlet-class>veiculo.ServletVeiculo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>ServletServico</servlet-name>
        <servlet-class>servico.ServletServico</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletOrdemServico</servlet-name>
        <servlet-class>os.ServletOrdemServico</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCliente</servlet-name>
        <url-pattern>/ServletCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCliente</servlet-name>
        <url-pattern>/cliente/cadastrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCliente</servlet-name>
        <url-pattern>/cliente/listar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCliente</servlet-name>
        <url-pattern>/cliente/autocomplete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletVeiculo</servlet-name>
        <url-pattern>/ServletVeiculo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletVeiculo</servlet-name>
        <url-pattern>/veiculo/cadastrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletVeiculo</servlet-name>
        <url-pattern>/veiculo/autocomplete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletServico</servlet-name>
        <url-pattern>/ServletServico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletServico</servlet-name>
        <url-pattern>/servico/cadastrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletServico</servlet-name>
        <url-pattern>/servico/autocomplete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletOrdemServico</servlet-name>
        <url-pattern>/ServletOrdemServico</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletOrdemServico</servlet-name>
        <url-pattern>/os/getNumOS</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletOrdemServico</servlet-name>
        <url-pattern>/os/cadastrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletOrdemServico</servlet-name>
        <url-pattern>/os/listar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletOrdemServico</servlet-name>
        <url-pattern>/os/addservicos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletOrdemServico</servlet-name>
        <url-pattern>/os/detalhe</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletOrdemServico</servlet-name>
        <url-pattern>/os/update</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
